<div class="w-100">
  {{!-- Background Image --}}
  <img src="/img/filmspiral-bg.jpg" class="mainBGpic" />
  <div class="cred-text-block">
    <div class="text-center">
      <div class="row">
        <div class="mt-0 mb-5">
          
          {{!-- Content Container --}}
          <div class="credCont">
            
            {{!-- Logo --}}
            <img src="/img/stay-in-logo.png" id="credLogo" class="text-center mt-5" />
            
            {{!-- Form Title --}}
            <h1 class="mt-5"><strong>Log In</strong></h1>
            <form class="login">
              
              {{!-- Email --}}
              <div class="form-group">
                <input type="email" class="form-control" id="email-input" placeholder="Email">
                <small id="emailHelp" class="makeBlueText">We'll never share your email with anyone else.</small>
              </div>

              {{!-- Password --}}
              <div class="form-group">
                <input type="password" class="form-control" id="password-input" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-info mt-4 text-white"><strong>Login</strong></button>
            </form>
            <br />

            {{!-- Link to go to sign up page --}}
            <h6 class="pb-4 makeBlueText">New to the Stay In app? <a href="/" class="text-white"><strong>Sign up now</strong></a>.</h6>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</div>