<div class="w-100 actBG">
  <img src="/img/cooking-bg.jpg" class="mainBGpic" />
  <div class="act-text-block">
    <div class="row">
      <div class="text-center ActChoiceCont">
        <img src="/img/si-cooking-icon.png" class="text-center mt-3 mb-3 actIcon" /><br />
        <h4 class="text-center mt-2 addshade d-none">Welcome <span data-id="" class="member-name d-none"></span></h4>

        {{!-- Add a Meal --}}
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-info mt-0" data-toggle="modal" data-target="#addMealModalCenter">
          <span><i class="fas fa-utensils"></i></span> Add a meal
        </button><br />
        <!-- Modal -->
        <div class="modal fade" id="addMealModalCenter" tabindex="-1" role="dialog"
          aria-labelledby="addMealModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header bg-info">
                <h5 class="modal-title" id="addMealModalLongTitle">Add a Meal</h5>
                <button type="button" class="btn-close btn-close-white" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true"></span>
                </button>
              </div>
              <div class="modal-body">

                {{!-- Add Activity Form --}}
                <form class="addMeal">
                  <div class="form-group">
                    <label for="addMeal" class="text-dark">Meal Name:</label>
                    <input type="text" id="addMeal" name="name">
                    <input type="hidden" name="cooked" value="0">
                  </div>
                  <button class="btn btn-warning text-light mt-1" id="addMealBtn"><span><i class="fas fa-utensils"></i></span> Add your meal</button>
                </form>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        {{!-- View Meal List --}}
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-info mt-1" id="MeallistBtn" data-toggle="modal" data-target="#MealListModal">
          <span><i class="fas fa-list"></i></span> View your meal list
        </button><br />
        <!-- Modal -->
        <div class="modal fade" id="MealListModal" tabindex="-1" role="dialog" aria-labelledby="MealListModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header bg-info">
                <h5 class="modal-title" id="MealListModalLabel">Game List</h5>
                <button type="button" class="btn-close btn-close-white" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true"></span>
                </button>
              </div>
              <div class="modal-body">

                <h4 class="text-dark">Meal List:</h4>
                <ul class="list-group watchlist-group">
                  {{#each meals}}
                  {{#unless this.cooked}}
                  <li class="text-dark list-group-item watchlist-item"><strong>
                      {{> cooking/cooking-block cooked=false}}
                  </li></strong>
                  {{/unless}}
                  {{/each}}
                </ul>

                <h4 class="text-dark mt-2">Already Cooked:</h4>
                <ul class="list-group watchlist-group">
                  {{#each meals}}
                  {{#if this.cooked}}
                  <li class="text-dark list-group-item watchlist-item"><strong>
                      {{> cooking/cooking-block played=true}}
                  </li></strong>
                  {{/if}}
                  {{/each}}
                </ul>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        {{!-- Decide a Game For Me --}}
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-info mt-1 mb-4" data-toggle="modal" data-target="#decideModal">
          <span><i class="fas fa-utensils"></i></span> Decide a meal for me!</button>

        <!-- Modal -->
        <div class="modal fade" id="decideModal" tabindex="-1" role="dialog" aria-labelledby="decidedLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header bg-info">
                <h5 class="modal-title" id="decidedLabel">Our Pick For You</h5>
                <button type="button" class="btn-close btn-close-white" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true"></span>
                </button>
              </div>
              <div class="modal-body" id="decidedBody">
                <h1 id="decidedbG">Meal Name</h1>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div><!-- /.row -->
  </div><!-- /.text block -->
</div><!-- /.w-100 -->