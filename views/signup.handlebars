<div class="w-100">
    {{!-- Background Image --}}
    <img src="/img/filmspiral-bg.jpg" class="mainBGpic" />
    <div class="cred-text-block">
        <div class="text-center">
            <div class="row">
                <div class="mt-0 mb-5">
                    
                    {{!-- Content Container --}}
                    <div class="credCont">

                        {{!-- Logo --}}
                        <img src="/img/stay-in-logo.png" id="credLogo" class="text-center mt-5" />
                        
                        {{!-- Form Title --}}
                        <h1 class="mt-5"><strong>Sign Up</strong></h1>
                        <form class="signup">
                            
                            {{!-- Email --}}
                            <div class="form-group">
                                <input type="email" class="form-control" id="email-input" placeholder="Email">
                                <small id="emailHelp" class="makeBlueText">We'll never share your email with anyone else.</small>
                            </div>

                            {{!-- Password --}}
                            <div class="form-group">
                                <input type="password" class="form-control" id="password-input" placeholder="Password">
                            </div>
                            <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                
                                {{!-- Error Display --}}
                                <span class="sr-only bg-default">Error:</span> <span class="msg bg-default"></span>
                            </div>
                            <button type="submit" class="btn btn-info mt-4 text-white"><strong>Sign Up</strong></button>
                        </form>
                        <br />
                        
                        {{!-- Link to go to login page --}}
                        <h6 class="pb-4 makeBlueText">Already have an account?  <a href="/login" class="text-white"><strong>Log in now</strong></a>.</h6>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>